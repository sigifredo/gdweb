<div id="news">

<?php

$i=1;
if(!count($this->news))
    echo "No hay noticias.";
else
{

    foreach($this->news as $line)
    {
        if($i%2 == 0)
            echo "<article class='card artr'>";
        else
            echo "<article class='card artl'>";
        echo "<header class='title'><a href='".$this->url(array('controller' => 'news', 'action' => 'view', 'n' => $line['id']))."'>".$line['title']."</a></header>";
        echo "<img class='newsimage' src='".$this->url(array('controller'=>'index', 'action'=>'view', 'i'=>$line['id_image']))."' />";
        echo "<p>".$line['header']."</p></article>";
        $i++;
    }

    echo "<div class=\"clear\"></div></div>";
}

?>
